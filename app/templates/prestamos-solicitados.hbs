{{menu-superior}}
<h2 class = "prestamosSolicitados">Prestamos solicitados</h2>
<div class="container">
	{{#if error}} 
		<div class="container">
			{{ventana-notificacion mensaje=errorMessage}}
		</div>
	{{/if}}
	{{#if tabla}}
		<table class = 'table table-bordered' id='tablaProximasCuotas'>
			<thead>
				<tr>
					<th>Socio</th>
					<th>Fecha</th> 
					<th>Valor</th>
					<th>Acciones</th>
				</tr>
			</thead>
			<tbody>
				{{#each model as |prestamo|}}
				<tr class = "bodyTable">
					<td>{{prestamo.user.name}}</td>
					<td>{{prestamo.date}}</td>
					<td>${{prestamo.value}}</td>
					<td style="text-align: center">
						<button class="btn btn-danger" {{action "rechazarPrestamo" prestamo}}>Rechazar</button>&nbsp;&nbsp;
						<button class="btn btn-success" {{action "aprobarPrestamo" prestamo}}>Aprobar</button>
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	{{/if}}
</div>

{{outlet}}