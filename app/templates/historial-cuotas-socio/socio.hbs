{{menu-superior}}
{{outlet}}
<h2 class = "prestamosSolicitados">{{model.socio}}</h2>
<div class='container'>
	{{#if model.error}} 
		<div class="container">
			{{ventana-notificacion mensaje=model.errorMessage}}
		</div>
	{{else}}
		<table class = 'table table-bordered' id='tablaProximasCuotas'>
			<thead>
				<tr>
					<th>Fecha</th>
					<th>Abono</th>
					<th>Inter√©s</th> 
					<th>Multa</th>
					<th>Administracion</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				{{#each model.cuotas as |cuota|}}
					<tr class="bodyTable {{cuota.Clase}}">
						<td>{{cuota.date}}</td>
						<td>{{cuota.payment}}</td>
						<td>{{cuota.interest}}</td>
						<td>{{cuota.fine}}</td>
						<td>{{cuota.administration}}</td>
						<td>{{cuota.total}}</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	{{/if}}
</div>
