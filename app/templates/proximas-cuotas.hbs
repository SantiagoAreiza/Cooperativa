{{menu-superior}}
{{outlet}}
<div class='container' >
	{{#if model.error}} 
		<div class="container">
			{{ventana-notificacion mensaje=model.errorMessage}}
		</div>
	{{else}}
		<table class = 'table table-bordered' id='tablaProximasCuotas'>
			<thead>
				<tr>
					<th>Fecha</th>
					<th>Abono</th>
					<th>Inter√©s</th> 
					<th>Multa</th>
					<th>Administracion</th>
					<th>Falta por pagar</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				{{#each model as |cuota|}}
					<tr class="bodyTable {{cuota.Clase}}">
						<td>{{cuota.Fecha}}</td>
						<td>{{cuota.Abono}}</td>
						<td>{{cuota.Interes}}</td>
						<td>{{cuota.Multa}}</td>
						<td>{{cuota.Administracion}}</td>
						<td>{{cuota.faltaPagar}}</td>
						<td>{{cuota.Total}}</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	{{/if}}
</div>
